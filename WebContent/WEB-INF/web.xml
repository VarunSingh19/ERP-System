<?xml version="1.0" encoding="UTF-8"?>
<element>

<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>Sales</display-name>
	<servlet>
		<servlet-name>AddSalesDataServlet</servlet-name>
		<servlet-class>com.example.controller.AddSalesDataServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AddSalesDataServlet</servlet-name>
		<url-pattern>/AddSalesDataServlet</url-pattern>
	</servlet-mapping>
	
	 <servlet>
        <servlet-name>SignupController</servlet-name>
        <servlet-class>SignupController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>SignupController</servlet-name>
        <url-pattern>/signup</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginController</servlet-name>
        <servlet-class>LoginController</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginController</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
</web-app>
</element>